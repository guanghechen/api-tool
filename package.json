{
  "name": "api-tool",
  "version": "0.0.1",
  "description": "generate api schemas for various api platform & create mock server for schemas",
  "main": "lib/index.js",
  "typings": "index.d.ts",
  "bin": {
    "apit": "lib/apit.js"
  },
  "author": "lemon-clown (me.clown.lemon@gmail.com)",
  "proxy": {},
  "scripts": {
    "build": "node -r ts-node/register -r tsconfig-paths/register script/build.ts",
    "debug:exec": "node --inspect=5395 -r ts-node/register -r tsconfig-paths/register",
    "debug:exec:nodemon": "nodemon --watch src -e ts,tsx --exec node --inspect=5395 -r ts-node/register -r tsconfig-paths/register",
    "debug:generate": "yarn debug:exec:nodemon test/debug-generate.ts --log-level=debug",
    "debug:generate-command": "yarn debug:exec src/command generate demo/simple --log-level=debug",
    "debug:serve": "yarn debug:exec:nodemon test/debug-serve.ts --log-level=debug",
    "debug:serve-command": "yarn debug:exec src/command serve demo/simple --log-level=debug",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "yarn lint:fix && yarn build"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@lemon-clown/typescript-json-schema": "^0.42.1",
    "@types/fs-extra": "^8.0.0",
    "@types/js-yaml": "^3.12.1",
    "@types/koa": "^2.0.49",
    "@types/koa-json": "^2.0.18",
    "@types/koa-router": "^7.0.42",
    "@types/mockjs": "^1.0.2",
    "@types/node": "^12.7.3",
    "colorful-chalk-logger": "^0.4.1",
    "commander": "^3.0.1",
    "fs-extra": "^8.1.0",
    "js-yaml": "^3.13.1",
    "json-schema-faker": "^0.5.0-rc17",
    "koa": "^2.8.1",
    "koa-json": "^2.0.2",
    "koa-router": "^7.4.0",
    "mockjs": "^1.0.1-beta3",
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-typescript": "^7.6.0",
    "@types/webpack": "^4.39.1",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^5.2.1",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "nodemon": "^1.19.1",
    "ora": "^3.4.0",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "webpack": "^4.39.3"
  }
}
